<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_sent"
        android:layout_gravity="center"
        android:textColor="@color/quantum_black_100"/>

    <TextView
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"
        android:paddingTop="20dp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Please check your inbox and click\n on the received link to reset a password"/>

    <ImageView
        android:background="@drawable/ic_baseline_email_24"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <Button
        android:layout_marginTop="40dp"
        android:id="@+id/btnResetPasswordLogin"
        android:text="@string/login"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/random"
            android:textColor="@color/quantum_black_100"
            android:text="Don't receive the link?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:paddingStart="10dp"
            android:text="Resend"
            android:textColor="@color/quantum_googred400"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvResendPasswordResetLink"
            tools:ignore="RtlSymmetry" />

    </RelativeLayout>

</LinearLayout>