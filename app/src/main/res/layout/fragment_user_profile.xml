<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileFragment">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgProfilePic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="?actionBarSize"
        />


    <ImageView
        android:id="@+id/img1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/imgProfilePic"
        android:contentDescription="TODO"
        android:background="@drawable/ic_baseline_person_24"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@id/img1"
        android:layout_below="@id/imgProfilePic"
        android:textSize="14sp"
        android:hint="Full Name"
       />

    <TextView
        android:clickable="true"
        android:id="@+id/tvProfileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="24dp"
        android:layout_below="@id/tv1"
        android:layout_toEndOf="@+id/img1"
        android:textSize="16sp"
        android:textColor="@color/quantum_black_100"
        android:background="?attr/selectableItemBackground"
        android:maxLines="1"
        app:drawableEndCompat="@drawable/ic_baseline_edit_24"
        android:focusable="true" />




    <ImageView
        android:id="@+id/img2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tvProfileName"
        android:contentDescription="TODO"
        android:background="@drawable/ic_baseline_email_24"
        />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@id/img2"
        android:layout_below="@id/tvProfileName"
        android:textSize="14sp"
        android:hint="@string/email"/>

    <TextView

        android:id="@+id/tvProfileEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv2"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/img1"
        android:textSize="16sp"
        android:textColor="@color/quantum_black_100"/>

    <TextView
        android:id="@+id/tvUserLogOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="@string/log_out"
        android:layout_below="@id/tvProfileEmail"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="12dp"
        android:drawablePadding="4dp"
        android:background="?attr/selectableItemBackground"
        app:drawableStartCompat="@drawable/ic_baseline_logout_24"
        app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />




</RelativeLayout>