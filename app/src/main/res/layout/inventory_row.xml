<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp">

    <ImageView
        android:id="@+id/imgInventoryThumbnail"
        android:padding="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"/>

    <TextView
        android:textColor="@color/quantum_black_100"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="15sp"
        android:id="@+id/tvInventoryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imgInventoryThumbnail"
        android:layout_marginEnd="50dp"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:gravity="start|center"/>

    <TextView
        android:paddingStart="10dp"
        android:textSize="13sp"
        android:textColor="@color/quantum_black_100"
        android:layout_toEndOf="@id/imgInventoryThumbnail"
        android:layout_below="@id/tvInventoryName"
        android:id="@+id/tvItemPermission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:id="@+id/btnInventoryOption"
        android:background="@drawable/ic_baseline_more_vert_24"
        android:layout_width="36dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>