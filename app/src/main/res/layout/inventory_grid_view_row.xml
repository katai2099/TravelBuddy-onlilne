<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="3dp"
        app:cardElevation="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="3dp"
            android:layout_width="195dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgInventoryGridThumbnail"
                android:layout_width="195dp"
                android:layout_height="140dp"
                android:paddingEnd="15dp"
                android:scaleType="fitXY"/>

            <RelativeLayout
                android:layout_below="@id/imgInventoryGridThumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/quantum_black_100"
                    android:id="@+id/tvInventoryGridName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/btnInventoryGridOption"
                    android:ellipsize="end"
                    android:maxLines="1"/>

                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/quantum_black_100"
                    android:layout_below="@id/tvInventoryGridName"
                    android:id="@+id/tvItemPermission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Button
                    android:background="@drawable/ic_baseline_more_vert_24"
                    android:id="@+id/btnInventoryGridOption"
                    android:layout_alignParentEnd="true"
                    android:layout_width="36dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_marginEnd="6dp"
                    />

            </RelativeLayout>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>






</RelativeLayout>